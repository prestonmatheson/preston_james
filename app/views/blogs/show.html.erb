    <!-- Page Header -->
    <header class="masthead">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= @blog.title %></h1>
              <h2 class="subheading"><%= @blog.subject%></h2>
              <span class="italic">Posted by Preston Matheson on <%= @blog.created_at.strftime('%m/%d/%y') %></span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="show_page_body">
           <%= markdown(@blog.body) %>
        </div>
      </div>
    </article>

<!-- add logic for verifying I'm logged in -->
<div class="container blog_show_btns">
  <%= link_to 'Back', blogs_path, class: "btn btn-primary blog_show_btn" %>
  <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-primary blog_show_btn" if current_user %> 
  <%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' }, class: "btn btn-primary blog_show_btn" if current_user %>
</div>