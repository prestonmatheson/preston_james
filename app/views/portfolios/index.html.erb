  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Want to Work Together?</h2>
        <h3 class="section-subheading text-muted">Send me a Message and I'll be in Touch</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 contact_content">
        <h3>Phone</h3>

        <p><%= number_to_phone "8017093615" %></p>

        <h3>Email</h3>

        <p><a href="mailto:preston.matheson12@gmail.com?subject=PortfolioContact" class="contact_content">preston.matheson12@gmail.com</a> </p>
      </div>
    </div>
  </div>
</section>
