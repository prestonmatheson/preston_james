<!-- Page Header -->
<header class="masthead")">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <span class="subheading">A Blog for Personal Life and Technology</span>
        </div>
      </div>
    </div>
  </div>

<%= link_to "New Blog Post", new_blog_path, class: "btn btn-primary new_post_btns" if current_user %>

</header>
<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @blogs.each do |blog| %>
        <div class="post-preview">
          <a href="<%= blog_path(blog) %>">
            <h2 class="post-title">
              <%= blog.title %>
            </h2>
            <h3 class="post-subtitle">
              <%= blog.subheading %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#">Preston Matheson</a>
            on <%= blog.created_at.strftime('%m/%d/%y') %></p>
        </div>
        <hr>
      <% end %>
      <!-- Pager -->
      <!-- <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div> -->
    </div>
  </div>
</div>
